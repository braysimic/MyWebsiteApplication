@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="bg-light py-4 border-bottom mb-4">
    <div class="container">
        @RenderSection("Header", required: false)
    </div>
</header>

<div class="container">
    <ul class="nav nav-tabs" id="helpTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
               href="@Url.Action("Index", "Home", new { area = "Help" })" 
               role="tab" aria-controls="home" aria-selected="true">Home</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tutorial" ? "active" : "")" 
               href="@Url.Action("Page1", "Tutorial", new { area = "Help" })" 
               role="tab" aria-controls="tutorial" aria-selected="false">Tutorial</a>
        </li>
    </ul>
    <div class="mt-4">
        @RenderBody()
    </div>
</div>

