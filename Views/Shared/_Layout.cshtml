<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        .navbar {
            padding-left: 15px;
            padding-right: 15px;
        }
        .navbar-nav .nav-link.active {
            font-weight: bold;
        }
        .navbar-nav.ms-auto .nav-link {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">My Website</a>
            <div class="navbar-nav me-auto">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">Home</a>
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" href="/Home/About">About</a>
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")" href="/Home/Contact">Contact</a>
            </div>
            <div class="navbar-nav ms-auto">
                <a class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Help" ? "active" : "")" href="/Help">Help</a>
            </div>
        </div>
    </nav>

    <header class="bg-light py-4 border-bottom mb-4">
        <div class="container">
            @RenderSection("Header", required: false)
        </div>
    </header>

    <main role="main" class="container pb-5">
        <div class="card shadow-sm">
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

